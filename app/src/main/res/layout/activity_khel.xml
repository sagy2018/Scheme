                android:layout_marginTop="15dp"
                android:text="Activity"
                android:textColor="#6b1244"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
