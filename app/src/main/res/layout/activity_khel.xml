                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView26"
                android:layout_marginTop="16dp"
                android:text="Fostering healthy habits including daily exercise and games"
                android:textColor="#d3006f" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView27"
                android:layout_alignStart="@+id/textView27"
                android:layout_below="@+id/textView27"
                android:layout_marginTop="17dp"
                android:text="Government"
                android:textColor="#6b1244"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView28"
                android:layout_alignRight="@+id/textView28"
                android:layout_below="@+id/textView28"
                android:layout_marginTop="19dp"
